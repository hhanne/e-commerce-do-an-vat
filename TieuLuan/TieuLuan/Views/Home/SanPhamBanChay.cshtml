<script>
    $(document).ready(function () {
        $(document).on('click', '.btn-decrease', function () {
            var id = $(this).data('id');
            var currentval = Number($('#' + id).val()) - 1;
            if (currentval > 0) {
                $('#' + id).val(currentval);
            }
        })

        $(document).on('click', '.btn-increase', function () {
            var id = $(this).data('id');
            var currentval = Number($('#' + id).val()) + 1;
            $('#' + id).val(currentval);
        })
    })
</script>
