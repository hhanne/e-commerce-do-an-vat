@using TieuLuan.Models;
@model SanPham
@{
    ViewBag.Title = "Nhung_mon_an_vat_tai_Ha_Noi_vao_mua_dong";
    Layout = "~/Views/Shared/_LayoutPage4.cshtml";
}

<div class="card">
    <img src="/assets/img/news/nhung-mon-an-vat-tai-ha-noi-mua-dong-4.jpg" class="card-img-top" alt="Card image" width="600" height="532">
    <div class="card-body">
        <h1 class="card-title">Những món ăn vặt tại Hà Nội vào mùa đông</h1>
        <p class="card-text">
            <h5>1.Ngô nướng, khoai nướng</h5>
            <h5>2.Ốc luộc.</h5>
            <h5>3.Cháo sườn</h5>
            <h5>4.Bánh gối, bánh rán mặn</h5>
            <h5>5.Bánh trôi tàu</h5>
        </p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
</div>
@section trai{

    <ul>

        @{
            var DM = (DoanhMuc)ViewData["dm"];

        }
        @foreach (var dm in DM.doanhmuc)
        {
            <li class="nav-item" style="list-style-type:none">
                <a class=" nav-link" href="/Home/Doanhmuc/@dm.MaDM">
                    @dm.TenDM
                </a>
            </li>
        }
    </ul>
}


@section spbanchay{


    @{
        var SPBC = (SanPhamBanChay)ViewData["spbc"];

    }
    @foreach (var spbc in SPBC.spbc)
    {

        <li class="nav-item" style="list-style-type:none">
            <a class="nav-link " style="color: #dd4b39;" href="/Home/SanPhamBanChay/@spbc.MaSP">
                <div class="row" style="width: 100%;">

                    <div class="col-sm-6 ">
                        <img class="img-thumbnail" src="~/assets/img/anhsanpham/@spbc.HinhAnh" alt="" style="height:80px; width: 100%;">
                    </div>
                    <div class="col-sm-6 ">
                        <b>@spbc.TenSP</b>
                        <br>
                        <p><del>@spbc.GiaBan</del>  @spbc.GiamGia</p>
                    </div>
                </div>
            </a>
        </li>

    }

}


