
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}
<h2>Thong tin vua dang nhap:@ViewBag.email Mat khau:@ViewBag.p</h2>
<div style="height:120px"></div>
<div class="login-form" style="width: 30%; margin:0 auto;border:1px solid black; padding:30px; border-radius:5px">

<form action="/home/login" method="post">

    <!-- Email input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form2Example1" >Email address:</label>
        <input type="email" class=" form-control id=" email" placeholder="Enter Email" name="email"  />
    </div>

    <!-- Password input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <label class="form-label" for="form2Example2">Password:</label>
        <input type="password" class=" form-control id=" email" placeholder="Enter Password" name="pswd" />
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked style="background-color:black; border:none"/>
                <label class="form-check-label" for="form2Example31"> Remember me </label>
            </div>
        </div>

        <div class="col">
            <!-- Simple link -->
            <a href="~/Home/reset_password">Forgot password?</a>
        </div>
    </div>

    <!-- Submit button -->
    <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4" style="width: 100%; background-color: #f8d0d2; border:none; color: black" >Sign in</button>

    <!-- Register buttons -->
    <div class="text-center">
        <p>Not a member? <a href="~/Home/register">Register</a></p>
        <p>or sign up with:</p>
        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1" style="color: black; text-decoration:none">
            <i class="fab fa-facebook-f"></i>
        </button>

        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1" style="color: black; text-decoration:none">
            <i class="   fab fa-google"></i>
        </button>

        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1" style="color: black; text-decoration:none">
            <i class="fab fa-twitter"></i>
        </button>

        <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1" style="color: black; text-decoration:none">
            <i class="fab fa-github"></i>
        </button>
    </div>
</form>
</div>

